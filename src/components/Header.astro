<script>
    const navButton = document.querySelector('.header__nav');
    function togglePopup() {
        document.querySelector('.nav__popup')?.classList.toggle('nav__popup-visible');
    };
    navButton?.addEventListener("click", function() {
        togglePopup();
    })
</script>


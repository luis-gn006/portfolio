---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<meta name='author' content='Luis Gonzalez' />
		<meta name='description' content='Luis Gonzalez Portfolio' />
		<link rel='icon' type='image/svg+xml' href='./favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<link rel='stylesheet' href='../../src/vendor/normalize.css' />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--first-color:  #f70776;
		--second-color: #c3195d;
		--third-color: #680747;
		--fourth-color: #141010; 
		
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--fourth-color);
		
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
